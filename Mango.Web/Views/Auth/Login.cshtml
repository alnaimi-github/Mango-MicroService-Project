@model LoginRequestDto

<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Login In</h1>
        </div>
        <div class="text-center row">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 p-2 offset-md-3">
                <input asp-for="UserName" placeholder="User name..." class="form-control"/>
            </div>
            <div class="col-12 col-md-6 p-2 offset-md-3">
                <input asp-for="Password" placeholder="Password..." class="form-control"/>
            </div>
            <div class="col-12 col-md-6 p-2 offset-md-3">
                <button type="submit" class="form-control btn btn-success" >Login</button>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
